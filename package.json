{
  "name": "numvalidate-app",
  "version": "1.0.0",
  "description": "Phone number validation REST API",
  "main": "index.js",
  "author": "Mazzarolo Matteo",
  "license": "Apache-2.0",
  "engines": {
    "node": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmazzarolo/numvalidate-app.git"
  },
  "keywords": [
    "numvalidate",
    "phone",
    "number",
    "validation",
    "formatting",
    "rest",
    "api"
  ],
  "bugs": {
    "url": "https://github.com/mmazzarolo/numvalidate-app/issues"
  },
  "homepage": "https://github.com/mmazzarolo/numvalidate-app#readme",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "heroku-postbuild": "NODE_ENV=production npm run build",
    "build": "NODE_ENV=production next build client",
    "start-dev": "node server/index.js",
    "flow": "flow client",
    "lint": "eslint client server",
    "precommit": "lint-staged",
    "test": "jest server --runInBand --noStackTrace --forceExit",
    "test:watch": "npm run test -- --watch",
    "reset": "rm -rf node_modules/ && npm prune && yarn cache clean"
  },
  "dependencies": {
    "auth0-js": "8.12.1",
    "autoprefixer": "7.1.4",
    "babel-plugin-inline-dotenv": "1.1.1",
    "babel-plugin-transform-inline-environment-variables": "0.2.0",
    "babel-plugin-wrap-in-js": "1.1.1",
    "compression": "1.7.0",
    "cssnano": "3.10.0",
    "cssnext": "1.8.4",
    "date-fns": "1.28.5",
    "dotenv": "4.0.0",
    "google-libphonenumber": "3.0.4",
    "ioredis": "3.1.4",
    "js-cookie": "2.1.4",
    "jsonwebtoken": "8.0.1",
    "jwks-rsa": "1.2.0",
    "koa": "2.3.0",
    "koa-body": "2.3.0",
    "koa-bouncer": "6.0.0",
    "koa-connect": "2.0.0",
    "koa-helmet": "3.2.0",
    "koa-jwt": "3.2.2",
    "koa-logger": "3.0.1",
    "koa-router": "7.2.1",
    "koa-sendfile": "2.0.0",
    "libphonenumber-js": "0.4.29",
    "ms": "2.0.0",
    "next": "3.2.2",
    "postcss": "6.0.11",
    "postcss-cssnext": "3.0.2",
    "postcss-custom-properties": "6.1.0",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "2.0.6",
    "ratelimiter": "3.0.3",
    "raven": "2.1.2",
    "raw-loader": "0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "2.2.0",
    "react-stripe-checkout": "2.6.3",
    "request": "2.81.0",
    "request-promise": "4.2.1",
    "stripe": "5.0.0",
    "typed.js": "2.0.5",
    "uuid": "3.1.0",
    "winston": "2.3.1",
    "winston-papertrail": "1.0.5"
  },
  "devDependencies": {
    "babel-jest": "21.0.2",
    "eslint": "4.6.1",
    "eslint-plugin-react-app": "1.0.2",
    "flow-bin": "0.54.1",
    "husky": "0.14.3",
    "jest": "21.0.2",
    "lint-staged": "4.1.3",
    "nodemon": "1.12.0",
    "prettier": "1.6.1",
    "supertest": "3.0.0"
  },
  "lint-staged": {
    "server/**/*.js client/**/*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "print-width": 100,
    "trailing-comma": "es5",
    "single-quote": true
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
